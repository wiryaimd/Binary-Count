<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/biner_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/mfont1"
            android:text="Biner"
            android:textAlignment="center"
            android:textSize="32sp">

        </TextView>

        <RelativeLayout
            android:id="@+id/biner_relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/biner_title"
            android:layout_margin="6dp"
            android:background="@drawable/custom_bg4"
            android:padding="6dp">

            <TextView
                android:id="@+id/biner_binerkedesimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/mfont2"
                android:text="Konversi Biner ke Desimal"
                android:textSize="22sp">

            </TextView>

            <TextView
                android:id="@+id/desimal_desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/biner_binerkedesimal"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="Contoh konversi 1101001 Biner = ... Desimal\nRumus:\nTiap angka pada bilangan biner * 2^(jumlah biner - baris ke n), kemudian jumlahkan hasilnya">

            </TextView>

            <ImageView
                android:id="@+id/biner_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/desimal_desc1"
                android:layout_margin="12dp"
                android:scaleType="fitXY">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/biner_relative1"
            android:layout_margin="6dp"
            android:background="@drawable/custom_bg4"
            android:padding="6dp">

            <TextView
                android:id="@+id/biner_binerkeother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/mfont2"
                android:text="Konversi Biner ke Oktal, Heksadesimal"
                android:textSize="22sp">

            </TextView>

            <TextView
                android:id="@+id/desimal_desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/biner_binerkeother"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="Kita bisa mengubah nya ke desimal terlebih dahulu kemudian dari desimal ke oktal/heksadesimal"
                android:layout_marginBottom="8dp">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>