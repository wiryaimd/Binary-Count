<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/splash_smkic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/smkn1dps_ic">

        </ImageView>

        <TextView
            android:textSize="22sp"
            android:fontFamily="@font/mfont2"
            android:text="SMK Negeri 1 Denpasar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/profil_img"
            android:src="@drawable/profil_m">

        </ImageView>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profil_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mfont2"
            android:text="Nama: I Made Adnya Sutha Wirya\nNo: 15\nKls: X RPL 2"
            android:textSize="14sp">

        </TextView>

    </RelativeLayout>

</RelativeLayout>